<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp_20"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20">

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Registration"
                        android:textColor="#D3D3D3"
                        android:textSize="@dimen/dp_30"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginBottom="@dimen/dp_10"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Enter Name"
                        android:id="@+id/edName"
                        android:paddingLeft="@dimen/dp_10"
                        android:background="@drawable/bg_edit_text"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_10"
                        android:hint="Enter Phone"
                        android:fontFamily="@font/poppins_regular"
                        android:maxLength="10"
                        android:id="@+id/edPhone"
                        android:inputType="number"
                        android:paddingLeft="@dimen/dp_10"
                        android:background="@drawable/bg_edit_text"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_10"
                        android:hint="Enter Email"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textEmailAddress"
                        android:id="@+id/edEmail"
                        android:paddingLeft="@dimen/dp_10"
                        android:background="@drawable/bg_edit_text"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_10"
                        android:hint="Enter Password"
                        android:id="@+id/edPassword"
                        android:inputType="textPassword"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingLeft="@dimen/dp_10"
                        android:background="@drawable/bg_edit_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textColor="#D3D3D3"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Should have at least 6 characters including an upper-case letter and a digit"
                        android:textSize="10dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:hint="Re-Enter Password"
                        android:id="@+id/edReenter_passwprd"
                        android:inputType="textPassword"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingLeft="@dimen/dp_10"
                        android:background="@drawable/bg_edit_text"/>

                    <CheckBox
                        android:id="@+id/chbcondition"
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#D3D3D3"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:buttonTint="#D3D3D3"
                        android:text="I agree to Move It Terms of Service,Privacy Policy and Content Policies"
                        android:textSize="13dp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_50"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="@dimen/dp_20"
                app:cardBackgroundColor="@color/colorPrimaryDark">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/btnSignup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign Up"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#D3D3D3"
                        android:layout_centerInParent="true"
                        android:textSize="20dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>